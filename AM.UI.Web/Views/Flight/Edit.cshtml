@model AM.ApplicationCore.Domain.Flight

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Flight</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Departure"></label>
        <input asp-for="Departure" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EffectiveArrival"></label>
        <input asp-for="EffectiveArrival" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EstimatedDuration"></label>
        <input asp-for="EstimatedDuration" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FlightDate"></label>
        <input asp-for="FlightDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="planefk"></label>
        <select asp-for="planefk" class="form-control" asp-items="ViewBag.Planeid"></select>
    </div>
    <div class="form-group">
        <label for="PilotImage">Change Airline Logo</label>
        <input type="file" name="PilotImage" class="form-control" />
    </div>
    <input type="hidden" asp-for="FlightId" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
