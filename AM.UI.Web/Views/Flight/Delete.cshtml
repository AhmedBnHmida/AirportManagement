@model AM.ApplicationCore.Domain.Flight

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Flight</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Flight</h4>
    <dl class="row">
        <dt class="col-sm-2">Departure</dt>
        <dd class="col-sm-10">@Model.Departure</dd>

        <dt class="col-sm-2">Destination</dt>
        <dd class="col-sm-10">@Model.Destination</dd>

        <dt class="col-sm-2">Flight Date</dt>
        <dd class="col-sm-10">@Model.FlightDate</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FlightId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
